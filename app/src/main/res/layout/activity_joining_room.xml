<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.coins.black.main_menu.JoiningRoom">

    <TextView android:text="Wating for other players..." android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/joining_text"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="60"
        android:id="@+id/joining_timer"
        android:layout_below="@+id/joining_text"
        android:layout_centerHorizontal="true"
        android:textColor="#ff243a"
        android:textSize="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Chat"
        android:id="@+id/joining_btn"
        android:layout_below="@+id/joining_image"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/joining_image"
        android:src="@drawable/menu"
        android:layout_below="@+id/joining_timer"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:layout_below="@+id/joining_btn"
        android:layout_alignRight="@+id/joining_text"
        android:layout_alignEnd="@+id/joining_text"
        android:layout_alignLeft="@+id/joining_text"
        android:layout_alignStart="@+id/joining_text"
        android:layout_alignParentBottom="true" />

    <!--change-->

</RelativeLayout>
