<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.coins.black.main_menu.JoiningRoom">

    <TextView android:text="Wating for other players..." android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/joining_text"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/joining_image"
        android:src="@drawable/menu"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="50dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Inverse"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/joining_text"
        android:layout_alignLeft="@+id/joining_text"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/joining_text"
        android:layout_alignStart="@+id/joining_text"
        android:progressDrawable="@drawable/circular_progress_bar" />

    <!--change-->

</RelativeLayout>
